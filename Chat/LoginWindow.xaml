<Window x:Class="Chat.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="LoginWindow" Height="200" Width="200
        ">
    <Grid Background="Orange"> 
        <TextBlock x:Name="LoginTB" Background="LightGray" Margin="55,30,55,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="18"/>
        <TextBlock x:Name="PasswordTB" Background="LightGray" Margin="55,60,55,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="18"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="49,44,0,0" VerticalAlignment="Top" Width="72" FontSize="10"/>
        <Label x:Name="Login1" Content="Login" HorizontalAlignment="Left" Margin="49,12,0,0" VerticalAlignment="Top" Width="64" FontSize="10"/>
        <Button x:Name="Login2" Content="Login" Margin="66,0,66,68" VerticalAlignment="Bottom" Height="16" FontSize="9"/>
        <Button x:Name="sign_up" Content="sign up" Margin="137,0,6,4" VerticalAlignment="Bottom" Height="14" FontSize="7"/>

    </Grid>
</Window>
